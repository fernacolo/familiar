        mc:Ignorable="d"
        Title="MainWindow" Height="164.108" Width="548" WindowStyle="None" Loaded="Window_Loaded"
        FocusManager.FocusedElement="{Binding ElementName=RtCommand}"
        ShowInTaskbar="False">
