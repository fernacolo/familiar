<Window x:Class="wcmd.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="164.108" Width="548" Loaded="Window_Loaded" WindowStyle="None">
    <Grid>
        <TabControl>
            <TabItem Header="Command">
                <RichTextBox x:Name="RtCommand" Margin="10,10,10,50" FontFamily="Consolas" AcceptsReturn="False"
                             TextOptions.TextFormattingMode="Display" KeyUp="RtCommand_KeyUp" />
            </TabItem>
            <TabItem Header="Search">
                <Grid>
                    <TextBox x:Name="TbSearch" TextWrapping="Wrap" Text="" Margin="10,10,10,87" VerticalAlignment="Top"
                             TextChanged="TextBox_TextChanged" Height="18" PreviewKeyDown="TbSearch_PreviewKeyDown"  >

                    </TextBox>
                    <ListBox x:Name="LbSearchResults" Margin="10,28,10,10"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>