        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="156.108" Width="525" Loaded="Window_Loaded" WindowStyle="None" >
    <Grid>
        <RichTextBox x:Name="RtCommand" Margin="10,10,10,50" FontFamily="Consolas" AcceptsReturn="False" TextOptions.TextFormattingMode="Display" KeyUp="RtCommand_KeyUp">
        </RichTextBox>
        <Button x:Name="BtRun" Content="Run" HorizontalAlignment="Left" Margin="10,0,0,25" VerticalAlignment="Bottom" Width="75" Click="BtRun_Click"/>

    </Grid>
</Window>
